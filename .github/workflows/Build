workflows:
  valuevpn-android:
    name: Build ValueVPN Android
    max_build_duration: 60
    environment:
      java: 17
    scripts:
      - name: Clean project
        script: ./gradlew clean
      - name: Build APK
        script: ./gradlew assembleRelease
      - name: Build App Bundle
        script: ./gradlew bundleRelease
    artifacts:
      - app/build/outputs/**/*.apk
      - app/build/outputs/**/*.aab
    publishing:
      email:
        recipients:
          - "khalil46.lost@gmail.com"
